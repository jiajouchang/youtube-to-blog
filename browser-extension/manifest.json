{
    "manifest_version": 3,
    "name": "YouTube 轉部落格文章",
    "version": "4.0.0",
    "description": "使用多種 AI (Gemini, Groq, OpenAI, Claude, DeepSeek) 將 YouTube 影片轉換為 SEO 優化的部落格文章",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "sidePanel",
        "tabs"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://*.googleapis.com/*",
        "https://api.groq.com/*",
        "https://api.openai.com/*",
        "https://api.anthropic.com/*",
        "https://api.deepseek.com/*"
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "injected.js"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ]
        }
    ]
}